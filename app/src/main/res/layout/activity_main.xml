<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fm_run_song_bg"
    android:orientation="vertical"
    tools:context="com.moliying.daibo.musicplayersimple.MainActivity">

   <ListView
       android:id="@+id/list_music"
       android:layout_width="match_parent"
       android:divider="#00000000"
       android:dividerHeight="20dp"
       android:layout_height="0dp"
       android:layout_weight="1"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/musicprogressbar" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="20dp"
        android:text="听音乐,用酷我" />




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">


        <ImageView
            android:id="@+id/imgBtn_play_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:src="@drawable/play_btn_play_selector" />

        <ImageView
            android:id="@+id/imgBtn_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/imgBtn_play_pause"
            android:clickable="true"
            android:src="@drawable/play_btn_prev_selector" />

        <ImageView
            android:id="@+id/imgBtn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/imgBtn_play_pause"
            android:clickable="true"
            android:src="@drawable/play_btn_next_selector" />

    </RelativeLayout>
</LinearLayout>
